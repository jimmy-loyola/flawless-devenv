#!/bin/bash

# Exclude directories from find and grep command
EXCLUDE_DIR=".git"

alias ff='fn-find-neovim'
fn-find-neovim() {
  find "${@:-.}" -not -path "*/$EXCLUDE_DIR/*" | fzf -e -m \
    --bind 'enter:execute(nvim {+})' \
    --bind "ctrl-y:execute-silent(echo $(pwd)/{+} | xclip -se c)"
}

alias gg='fn-grep-neovim'
fn-grep-neovim() {
  search_str="$@"
  grep -FliR "$search_str" --exclude-dir="$EXCLUDE_DIR" 2> /dev/null | fzf -e -m \
    --bind "enter:execute(nvim -c \"/\c$search_str\" {+})" \
    --bind "ctrl-y:execute-silent(echo $(pwd)/{+} | xclip -se c)" \
    --preview="grep -Fin -C 5 \"$search_str\" {} --color=always" \
    --preview-window="up:70%" --keep-right
}

alias gitlf='fn-git_log_file'
fn-git_log_file() {
  file_or_dir=`pwd`/$1
  if [ -f $file_or_dir ]; then
    cd `dirname $file_or_dir`
    git log --follow -p `basename $file_or_dir`
    cd -
  elif [ -d $file_or_dir ]; then
    cd $file_or_dir
    git log --follow -p .
    cd -
  fi
}

alias gitlfr='fn-git_log_filer'
fn-git_log_filer() {
  file_or_dir=`pwd`/$1
  if [ -f $file_or_dir ]; then
    cd `dirname $file_or_dir`
    git log --reverse --follow -p `basename $file_or_dir`
    cd -
  elif [ -d $file_or_dir ]; then
    cd $file_or_dir
    git log --reverse --follow -p .
    cd -
  fi
}

alias gitd='git_diff_all_changes'
git_diff_all_changes() {
  echo -e "\n${BRed}##########${Nc} ${BYellow}DIFF UNSTAGED${Nc} ${BRed}##########${Nc}\n"
  git diff
  echo -e "\n${BGreen}##########${Nc} ${BYellow}DIFF STAGED${Nc} ${BGreen}##########${NC}\n"
  git diff --staged
}

fn-convert_pdf_to_html() {
  find . -type f -name "*.pdf" -exec pdf2html {} {}.html \;
}

fn-tmux-init() {
  if [ $(ls /tmp/tmux-* 2> /dev/null | wc -l) == 0 ]; then
    tmux new-session -s front \; new-session -s back \; switch -t front
  fi
}

fn-docker-create-container() {
  docker run -d -i -h "$*" --name "$*" ubuntu
}
